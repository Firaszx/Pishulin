        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasNum)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TravelID">Edit</a> |
